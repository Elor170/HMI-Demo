{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "lib": [
      "es2020", "DOM"
    ],
    "module": "ESNext", 
    "moduleResolution": "Node",
    "strict": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "tsc-alias": {
    "resolveFullPaths": true,
  },
  "include": ["src"]
}