FROM node:22-slim AS base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack install -g pnpm
WORKDIR /app

FROM base AS build
ARG ServiceName
COPY . .
RUN pnpm install
RUN pnpm --filter ${ServiceName} build
RUN pnpm deploy --filter ${ServiceName} /build

FROM base AS prod
WORKDIR /app
COPY --from=build /build /app/

CMD [ "pnpm", "start" ]